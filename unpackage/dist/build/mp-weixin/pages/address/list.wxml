<view class="container"><view class="address-list"><block wx:for="{{addressList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="a-address"><view class="{{['left-text '+(item.is_default=='1'?'active':'')]}}" data-id="{{item.id}}" data-event-opts="{{[['tap',[['selectTap',['$event']]]]]}}" bindtap="__e"><view class="name-tel">{{item.name+" "+item.phone}}</view><view class="address-box">{{item.area+item.community+item.door_number}}</view></view><view class="right-edit" data-id="{{item.id}}" data-event-opts="{{[['tap',[['editAddess',['$event']]]]]}}" bindtap="__e"></view><view class="right-delete" data-id="{{item.id}}" data-event-opts="{{[['tap',[['deleteAddess',['$event']]]]]}}" bindtap="__e"><image class="deleteImg" src="/static/images/delete@2x.png"></image></view></view></block></view><view class="bottom-box"><view data-event-opts="{{[['tap',[['addAddess',['$event']]]]]}}" class="add-btn" bindtap="__e">新增地址</view></view></view>